{
  "name": "@tuilder/ws-server",
  "version": "0.0.4",
  "description": "Websocket Server Boilerplate",
  "main": "./lib/esm/index.mjs",
  "types": "./lib/esm/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "tsc -w",
    "clean": "rimraf ./lib",
    "rename": "node -e \"require('fs').rename('lib/esm/index.js', 'lib/esm/index.mjs', function(err) { if (err) console.log(err); })\"",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && npm run rename",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tuilder-Web-Services/ws-server.git"
  },
  "author": "Emmanuel Higgins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tuilder-Web-Services/ws-server/issues"
  },
  "homepage": "https://github.com/Tuilder-Web-Services/ws-server#readme",
  "devDependencies": {
    "@types/ws": "^8.5.4",
    "rimraf": "^4.3.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ipaddr.js": "^2.0.1",
    "nanoid": "^4.0.1",
    "ws": "^8.12.1"
  }
}
